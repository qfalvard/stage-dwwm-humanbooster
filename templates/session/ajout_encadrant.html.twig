{% extends 'base.html.twig' %}

{% block title %}Ajout encadrant{% endblock %}

{% block body %}
<div class="encadre">

    <h1>Ajout d'encadrant(s)</h1>

    <form action="" method="POST">
        <div class="row">
            {% for i in 1..3 %}
            <div class="mb-3 input-group">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="ordre{{i}}">Poste d'encadrement</label>
                </div>
                <select class="custom-select mr-1" name="ordre{{i}}" id="ordre{{i}}">
                    <option value="1">Chef de projet</option>
                    <option value="2">Adjoint de gestion et projets</option>
                    <option value="3">Responsable qualité</option>
                </select>
                <div class="input-group-prepend">
                    <label class="input-group-text" for="encadrant{{i}}">Encadrant</label>
                </div>
                <select class="custom-select" name="encadrant{{i}}" id="encadrant{{i}}">
                    <option value=""></option>
                    {% for encadrant in encadrants %}
                    <option value="{{encadrant.id}}">{{ encadrant.nom|upper }} {{ encadrant.prenom }} - {{ encadrant.email }}</option>
                    {% endfor %}
                </select>
            </div>
            {% endfor %}
        </div>

        <div class="row px-3">
            <div class="mt-3">
                <a class="secondaire p-2" href="{{ path('session_show', { 'id': session.id }) }}">Retour à la listes des sessions</a>
            </div>
            <div class="ml-auto">
                <button class="primaire">Valider</button>
            </div>
        </div>
    </form>

</div>
{% endblock %}

{% block javascripts %}
<!-- Va savoir pourquoi, cette ligne est nécessaire, même si elle est dans le base.html.twig ! -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-beta.1/js/select2.min.js"></script> 

<script>
	$('select').select2({
    theme: 'bootstrap4',
});
</script>
{% endblock %}