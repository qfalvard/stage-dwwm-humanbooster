{% extends 'base.html.twig' %}

{% block title %}Liste des entreprises{% endblock %}

{% block body %}
<div class="encadre text-center">
    <h1>Liste des entreprises</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom de l'entreprise</th>
                <th>activite</th>
                <th>Raison Social</th>
                <th>telephone</th>
                <th>email</th>
                <th>adresse</th>
                <th>commune</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.nom }}</a></td>
                <td>{{ entreprise.activite }}</td>
                <td>{{ entreprise.raisonSocial }}</td>
                <td>{{ entreprise.telephone }}</td>
                <td>{{ entreprise.email }}</td>
                <td>{{ entreprise.adresse.ligne1 }}</td>
                 <td>{{ entreprise.adresse.commune.nom }}</td>
                 
                <td class="text-center">
                    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}"><i class="far fa-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="container row ml-auto">
        <div class="ml-auto">
            <a href="{{ path('entreprise_new') }}"><button class="primaire">Ajouter une entreprise</button></a>
        </div>
    </div>
</div>
{% endblock %}
