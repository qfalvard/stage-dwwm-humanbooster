{% extends 'base.html.twig' %}

{% block title %}Choisir Module{% endblock %}

{% block body %}
<div class="encadre">
    <h1>Choisissez un module</h1>

    <table class="table mod">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for module in modules %}
            <tr>
                <td>{{ module.nom }}</td>
                <td>
                    <a href="{{ path('evaluation_evaluer', {'id_session': session.id,'id_module': module.id}) }}">Choisir
                        Module</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">Il n'y a pas de module, veuillez en saisir un.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}