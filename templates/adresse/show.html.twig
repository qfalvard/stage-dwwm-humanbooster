{% extends 'base.html.twig' %}

{% block title %}Adresse{% endblock %}

{% block body %}
<div class="encadre">
    <h1>Adresse</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ligne1</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Commune</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ adresse.ligne1 }}</td>
                <td>{{ adresse.ligne2 }}</td>
                <td>{{ adresse.ligne3 }}</td>
                <td>{{ adresse.cp }}</td>
                <td>{{ adresse.commune.nom|upper }}</td>
