{% extends 'base.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
<div class="encadre">
    <h1>Module n°{{ module.id }}</h1>
    <div class="row px-3 mb-3">
        <div class="ml-auto">
            {% if app.user.roles[0] == 'ROLE_ENCADRANT' %}
                {{ include('module/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ module.nom }}</td>
            </tr>
            <tr>
                <th>IsTre</th>
                <td>{{ module.isTre ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Examen</th>
                <td>{{ module.examen ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row px-3">
        <div class="mt-3">
            <a class="secondaire p-2" href="{{ path('module_index') }}">Retour à la liste des modules</a>
        </div>
        {% if app.user.roles[0] == 'ROLE_ENCADRANT' %}
        <div class="ml-auto">
            <a href="{{ path('module_edit', {'id': module.id}) }}"><button class="primaire">Modifier</button></a>
        </div>
        {% endif %}
</div>
{% endblock %}